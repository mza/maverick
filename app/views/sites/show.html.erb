<div class='links'>
  <div id='small-logo'>
    <%= link_to image_tag('logo-small.gif', :size => "75x69"), :controller => :home %>
  </div>
  <div id='title'>
    <strong><%= @site.name %></strong>
    <div id='subtitle'>
      <%= @site.url %>
    </div>
  </div>
  <br clear='all' />
</div>

<%= render :partial => "shared/flashes" %>

<div class='simple links'>
  <strong><%= link_to 'view site', "/#{@site.nickname}/pages" %></strong> &middot; <%= link_to 'edit', :controller => :sites, :action => :edit, :id => @site.id %> &middot; <%= link_to 'remove', { :controller => :sites, :action => :delete, :id => @site.id }, :confirm => "This will remove this site and all related posts?\n\nAre your sure?" %>
</div>

<div id='content'>
  <p>
    Bucket name: <%= @site.bucket_name %>
  </p>
  <p>
    Posts: <%= @site.all_assets.size %> &middot; <%= link_to 'upload', :controller => :sites, :action => :upload, :id => @site.id %>
  </p>
  <p>
	<table width='100%'>
      <% for post in @site.all_assets %>
		<tr>
			<td><%= link_to post.title, "/#{@site.nickname}/pages/show/#{post.title}" %></td>
			<td><%= post.date.to_formatted_s :long %></td>
			<td><%= link_to 'x', :controller => :sites, :action => :remove, :id => @site.id, :post => post.title %></td>
		</tr>		
      <% end %>
    </table>
  </p>
</div>
